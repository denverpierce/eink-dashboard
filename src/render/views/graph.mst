<section class="day-forecast-section">
  <script>
    const weatherData = JSON.parse(`{{{graph}}}`)
    const precipitation = weatherData.precipitation.map((precip)=>{
        return [new Date(precip.x), precip.y ]
    });
    this.temperatures = [weatherData.temperature];

    Highcharts.chart('container', {
        chart: {
            marginBottom: 40,
            marginRight: 10,
            marginTop: 30,
            plotBorderWidth: 0,
            height: 300,
            width: 900,
            alignTicks: false
        },

        title: {
            text: null
        },

        credits: {
            enabled: false
        },
        xAxis: [{ // Bottom X axis
            type: 'datetime',
            // tickInterval: 36e5, // two hours
            minorTickInterval: 36e5, // one hour
            tickLength: 0,
            gridLineWidth: 2,
            gridLineColor: 'rgba(128, 128, 128, 0.1)',
            startOnTick: false,
            endOnTick: false,
            minPadding: 0,
            maxPadding: 0,
            //offset: 30,
            showLastLabel: false,
            labels: {
                format: '{value:%l %p}'
            },
            crosshair: true
        }, { // Top X axis
            linkedTo: 0,
            type: 'datetime',
            tickInterval: 24 * 3600 * 1000,
            labels: {
                format: '{value:<span style="font-size: 16px; font-weight: bold">%a</span> %b %e}',
                align: 'left',
                x: 3,
                y: 8
            },
            opposite: true,
            tickLength: 20,
            gridLineWidth: 1
        }],

        yAxis: [{ // temperature axis
            title: {
                enabled: false,
            },
            labels: {
                format: '{value}°',
                style: {
                    fontSize: '16px'
                },
                x: -3
            },
            plotLines: [{ // zero plane
                value: 0,
                color: '#BBBBBB',
                width: 4,
                zIndex: 2
            }],
            maxPadding: 0.3,
            // minRange: 8,
            // tickInterval: 10,
            gridLineColor: 'rgba(128, 128, 128, 0.1)'

        }, { // precipitation axis
            title: {
                text: null
            },
            labels: {
                enabled: false
            },
            gridLineWidth: 0,
            tickLength: 0,
            minRange: 10,
            min: 0

        }],

        legend: {
            enabled: false
        },

        plotOptions: {
            series: {
                pointPlacement: 'between'
            },
            spline: {
                animation: false,
                lineWidth: 3
            }
        },
        series: [{
            name: 'Temperature',
            yAxis: 0,
            data: weatherData.temperature,
            type: 'spline',
                        marker: {
                enabled: false,
                states: {
                    hover: {
                        enabled: true
                    }
                }
            },
            tooltip: {
                pointFormat: '<span style="color:{point.color}">\u25CF</span> ' +
                    '{series.name}: <b>{point.y}°C</b><br/>'
            },
            zIndex: 1,
            color: '#FF0000',
            negativeColor: '#48AFE8'
        },
        {
            name: 'Precipitation',
            data: weatherData.precipitation,
            type: 'column',
            color: '#68CFE8',
            yAxis: 1,
            groupPadding: 0,
            pointPadding: 0,
            grouping: false,
            dataLabels: {
                enabled: !this.hasPrecipitationError,
                filter: {
                    operator: '>',
                    property: 'y',
                    value: 0
                },
                style: {
                    fontSize: '16px',
                    color: '#666'
                }
            },
            tooltip: {
                valueSuffix: ' in'
            }
        }
        ]
    });
  </script>
  <h2 class="header">Today's Weather Graph</h2>
  <figure class="highcharts-figure">
    <div id="container">
      <div id="loading">
        <i class="fa fa-spinner fa-spin"></i> Loading data from external
        source
      </div>
    </div>
  </figure>
</div>
</section>
